{% if restartRequired == true %}

    {% set restart_link = web_link('System/Configuration/Power/Index#tab-reboot') %}

    <div class="alert alert-warning">
        <h4>{% trans 'Restart required' %}</h4>
        <p>
        {% trans %}
            The preceding package upgrade requires a system restart.
            Click on <a href="{{ restart_link }}">this link
            to trigger a manual restart</a> of your appliance.
        {% endtrans %}
        </p>
    </div>
{% endif %}
