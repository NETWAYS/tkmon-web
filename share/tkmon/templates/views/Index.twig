<div class="page-header">
    <h2>Home</h2>
</div>

{% if user.getAuthenticated() == true %}
    {% if config.get('app.login.counter') == 1 %}
        {% set config_link = web_link('ThomasKrenn/Alert/Configuration/Index') %}
        {% set tk_info_link = 'http://www.thomas-krenn.com' %}
        <div class="alert alert-block">
            <h4>{% trans "Welcome" %}</h4>
            <p>
            {% trans %}
                Seems that you're here the first time. If you have a ThomasKrenn Service Subscription, please
                goto <a href="{{ config_link }}">Alert Settings Page</a> and enter your credentials.

                After that your monitoring service is equipped with Thomas Krenn support power! (<a href="{{ tk_info_link }}">
                Click on that link for more information</a>)

            {% endtrans %}
            </p>
        </div>
        <div class="container-spacer-down"></div>
    {% endif %}
{% endif %}

<div class="hero-unit">
    <h1>Welcome to TKMON.</h1>
    <p>Simple and fast monitoring based on Icinga</p>
    <p>
        {% if user.getAuthenticated() == true %}
            <a href="{{ web_link('Monitor/Icinga/Services') }}" class="btn btn-large btn-primary">
                <i class="icon-warning-sign icon-2x"></i> Whats up
            </a>
            <a href="{{ web_link('Index/LearnMore') }}" class="btn btn-large btn-primary">
                <i class="icon-lightbulb icon-2x"></i> Learn more
            </a>
        {% else %}
            This is a protected application please login to proceed.
            <div class="container-spacer-down">
                <a href="{{ web_link('System/Login/Index') }}" class="btn btn-primary">
                    <i class="icon-key"></i> Login
                </a>
            </div>
        {% endif %}
    </p>
</div>
