{
    "session.name":         "tkmon-loggin-session",
    "session.lifetime":     3600,

    "template.file":        "main.twig",

    "navigation.data":      "{core.etc_dir}/nav.json",

    "mvc.action.namespace": "\\TKMON\\Action\\Expose",

    "app.version.major":    0,
    "app.version.minor":    0,
    "app.version.patch":    0,
    "app.name":             "tkmon",
    "app.copyright":        "(c) 2012-2013",

    "app.version.release":  "{app.name}-{app.version.major}.{app.version.minor}.{app.version.patch}",

    "db.schema":            "{core.etc_dir}/database.sql",
    "db.file":              "{core.var_dir}/db/default.sqlite",
    "db.dsn":               "sqlite:{db.file}",

    "system.interface":     "eth0",

    "locale.domain":        "messages",
    "locale.path":          "{core.share_dir}/locales",
    "locale.name":          "en_EN",
    "locale.list": [
        { "locale": "de_DE", "label": "Deutsch" },
        { "locale": "en_EN", "label": "English" }
    ],

    "command.config": {
        "chpasswd":  {
            "path": "/usr/sbin/chpasswd",
            "sudo": true
        },

        "usermod": {
            "path": "/usr/sbin/usermod",
            "sudo": true
        },

        "passwd": {
            "path": "/usr/bin/passwd",
            "sudo": true
        },

        "reboot": {
            "path": "/sbin/reboot",
            "sudo": true
        },

        "hostname": {
            "path": "/bin/hostname",
            "sudo": true
        },

        "mv": {
            "path": "/bin/mv",
            "sudo": true
        },

        "restart": {
            "path": "/sbin/restart",
            "sudo": true
        },

        "service": {
            "path": "/usr/sbin/service",
            "sudo": true
        }
    }
}